<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ModifyScreen.ControllerModifySection">
   <children>
      <VBox alignment="TOP_CENTER" prefHeight="300.0" prefWidth="300.0">
         <children>
            <Label text="Label" />
            <GridPane alignment="TOP_RIGHT" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="25.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Label contentDisplay="RIGHT" layoutX="10.0" layoutY="17.0" text="Name" />
                  <TextField fx:id="tfNameModifySection" layoutX="10.0" layoutY="12.0" GridPane.columnIndex="1" />
                  <Label contentDisplay="RIGHT" layoutX="10.0" layoutY="17.0" text="Description" wrapText="true" GridPane.rowIndex="1" />
                  <TextArea fx:id="tfDescriptionModifySection" promptText="test du txt ?" wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="1" />
               </children>
               <VBox.margin>
                  <Insets bottom="15.0" />
               </VBox.margin>
            </GridPane>
            <Button fx:id="btnModifySectionData" mnemonicParsing="false" onAction="#handleClicks" text="Modifier" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
